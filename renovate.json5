{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:best-practices",
    // "schedule:monthly",
    ":gitSignOff",
    ":semanticCommits",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
  ],
  assigneesFromCodeOwners: true,
  separateMajorMinor: true,
  customManagers: [
    {
      customType: "regex",
      fileMatch: [".ci/versions.env"],
      matchStringsStrategy: "any",
      matchStrings: [
        "export [A-Z]+_VERSION=(?<currentValue>.*) # (?<datasource>.*?)/(?<depName>.*?)(\\&versioning=(?<versioning>.*?))?\\s",
      ],
    },
  ],
  packageRules: [
    // NOTE: the last matching group takes effecT
    {
      groupName: "all other dependencies",
      groupSlug: "all",
      matchPackagePatterns: ["*"],
    },
    {
      groupName: "all non-major golang dependencies",
      groupSlug: "all-minor-patch",
      matchDatasources: "go",
      matchUpdateTypes: ["minor", "patch"],
    },
    {
      // needed to maintain our hugo dependencies
      matchManagers: ["gomod"],
      matchDepTypes: ["indirect"],
      enabled: true,
    },
  ],
}
